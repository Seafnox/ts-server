{
    "name": "ts-server",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "npm run tsc",
        "coverage": "npm run test-cov && npm run test-remap",
        "generate:certs": "ts-node server/generate-cert.js",
        "tslint": "tslint -p tsconfig.json",
        "tslint:fix": "tslint -p tsconfig.json --fix",
        "test": "mocha --reporter spec --check-leaks --bail test/",
        "tsc": "tsc --project tsconfig.json",
        "tsc:w": "tsc -w",
        "start": "nodemon --ignore 'node_modules/**/*' --exec ts-node bootstrap.ts",
        "run": "ts-node bootstrap.ts"
    },
    "dependencies": {
        "@tsed/common": "^6.114.17",
        "@tsed/core": "^6.114.17",
        "@tsed/di": "^6.114.17",
        "@tsed/platform-express": "^6.114.17",
        "@tsed/swagger": "^6.114.17",
        "@tsed/typeorm": "^6.114.17",
        "@types/swagger-schema-official": "^2.0.22",
        "body-parser": "^1.20.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "express": "^4.18.1",
        "faker": "^6.6.6",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "reflect-metadata": "^0.1.13",
        "slugify": "^1.6.5",
        "sql.js": "^1.7.0",
        "ts-httpexceptions": "^4.1.0",
        "typeorm": "^0.2.45",
        "unused-filename": "^4.0.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/compression": "1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/faker": "^6.6.9",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/node": "^17.0.41",
        "@types/pem": "^1.9.6",
        "mocha": "^10.0.0",
        "nodemon": "^2.0.16",
        "pem": "^1.14.6",
        "ts-node": "^10.8.1",
        "tslint": "^6.1.3",
        "tslint-config-airbnb": "^5.11.2",
        "typescript": "~3.9.10"
    }
}
